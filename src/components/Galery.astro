---
import Slider from "./slider/Slider";
---

<section>
    <div>
        <h3>Nuestros</h3>
        <Slider client:only />
        <h3>clientes</h3>
    </div>
</section>

<style>
    section{
        display: grid;
        align-items: center;
        justify-content: center;
        margin-top: -150px;
        height: 300px;
        width: 100%;
        overflow: hidden;
    }
    div{
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 150px;
        max-width: 1350px;
        width: 110vw;
        background-color: var(--blue);
        transform: rotate(-5deg);
    }
    div::after{
        position: absolute;
        content: " ";
        width: 100px;
        height: 110%;
        right: -20px;
        background: linear-gradient(to right, var(--transparent) 15%, var(--white) 50%, var(--white) 100%);
        transform: rotate(5deg);
    }
    div::before{
        position: absolute;
        content: " ";
        width: 100px;
        height: 110%;
        left: -20px;
        background: linear-gradient(to left, var(--transparent) 15%, var(--white) 50%, var(--white) 100%);
        transform: rotate(5deg);
    }
</style>