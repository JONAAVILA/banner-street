---
import Slider from "./slider/Slider";
---

<section>
    <h3>Nuestros</h3>
    <Slider client:only />
    <h3>clientes</h3>
</section>

<style>
    section{
        position:relative;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: -80px;
        height: 200px;
        min-width: 1300px;
        width: 96%;
        background-color: var(--blue);
        transform: rotate(-5deg);
    }
    section::after{
        position: absolute;
        content: " ";
        width: 50px;
        height: 110%;
        right: -10px;
        background: var(--white);
        transform: rotate(5deg);
    }
    section::before{
        position: absolute;
        content: " ";
        width: 50px;
        height: 110%;
        left: -10px;
        background: var(--white);
        transform: rotate(5deg);
    }
</style>