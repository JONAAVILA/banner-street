---
import Slider from "./slider/Slider";
---

<section>
    <h3>Nuestros</h3>
    <Slider client:only />
    <h3>clientes</h3>
</section>

<style>
    section{
        position:relative;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: -80px;
        height: 200px;
        min-width: 1300px;
        width: 96%;
        background-color: var(--yellow);
        transform: rotate(-5deg);
    }
    section::after{
        position: absolute;
        content: " ";
        width: 40px;
        height: 110%;
        right: -10px;
        background: var(--white);
        transform: rotate(5deg);
    }
    section::before{
        position: absolute;
        content: " ";
        width: 40px;
        height: 110%;
        left: -10px;
        background: var(--white);
        transform: rotate(5deg);
    }

    @media 
        (width < 700px){
            section{
                display: grid;
                align-items: center;
                justify-content: center;
                text-align: center;
                height: 350px;
                width: 100%;
                min-width: 0px;
                transform: rotate(0deg);
            }
            section::after{
                display:none;
            }
            section::before{
                display:none;
            }
            h3{
                font-size: 2rem;
            }
        }
</style>