<section>
	<div class="banner" >
		<img 
			src="/images/Pasacalles-la-Mancha-Buenos-Aires.png" 
			alt="Pasacalles la Mancha en Avellaneda y Alrededores, Trabajamos en Zona Sur, Zona Norte, Zona Oeste y Zona Este del Amba"
		>
	</div>
	<header>
		<h1>
			<span>
				la Mancha
			</span>
			<span class="pasacalles" >
				PASACALLES
			</span>
		</h1>
		<h2>30 AÑOS DE EXPERIENCIA</h2>
		<h4>Pasacalles La Mancha En el Día y Express</h4>
	</header>
</section>

<style>
	section{
		position: relative;
		display: grid;
		align-items: center;
		justify-content: center;
		height:100vh;
		width: 100%;
	}
	h1{
		display: flex;
		flex-direction: column;
		align-items: center;
	}
	.pasacalles{
		font-family: 'Poppins-SemiBold',sans-serif;
		font-size: 1.6rem;
		margin-bottom: 10px;
		letter-spacing: 4px;
	}
	.banner{
		z-index: -1;
		position: absolute;
		display: grid;
		align-items: center;
		justify-content: center;
		width: 90%;
		height: 100%;
		min-width: 1300px;
		max-width: 1500px;
		left: 50%;
		top: 50%;
		overflow: hidden;
		transform: translate(-50%,-50%);

	}
	.banner::after{
		position: absolute;
		z-index: 0;
		content: " ";
		width: 70px;
		right: 0;
		height: 100%;
		background:linear-gradient(
			to left,
			var(--white),
			var(--transparent)
		);
	}
	.banner::before{
		position: absolute;
		z-index: 0;
		content: " ";
		width: 70px;
		left: 0;
		height: 100%;
		background:linear-gradient(
			to right,
			var(--white),
			var(--transparent)
		);
	}
	header{
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	img{
		width: 100%;
	}

	@media
		(width < 700px){
			h1{
				font-size: 2.5rem;
			}
			h2{
				font-size: .8rem;
			}
			.banner{
				left: -30%;
			}
		}
</style>
