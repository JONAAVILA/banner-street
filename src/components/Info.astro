<style>
    section{
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        width: 900px;
        padding-block: 80px;
    }
    h3{
        font-size: 3rem;
        color: var(--blue);
    }
    p{
        display: flex;
        align-items: center;
        font-size: 15px;
        gap: 5px;
    }
    .box_info_heading{
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        width: 100%;
        gap: 15px;
    }
    .container_phone_number{
        display: flex;
        align-items: flex-start;
        justify-content: space-between;
        padding-block: 15px;
        width: 100%;
    }
    .box_phone_number{
        display: flex;
        align-items: center;
        gap: 15px;
    }
    .phone_number{
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3.5rem;
        color: var(--blue);
        line-height: 1;
    }
    .call_us{
        font-size: 2rem;
        color: var(--blue);
    }

    @media
        (width < 700px){
            section{
                width: 90%;
                display: grid;
                gap: 30px;
            }
            .box_info_heading{
                flex-direction: column;
                align-items: center;
                text-wrap: balance;
            }
            h3{
                font-size: 2.5rem;
            }
            .container_phone_number{
                flex-direction: column;
                gap: 20px;
            }
            .phone_number{
                font-size: 2.7rem;
            }
        }
</style>