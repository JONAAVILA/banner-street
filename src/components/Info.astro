---
import WhatsappButton from "./buttons/WhatsappButton.astro";
import Award from "./icons/Award.astro";
import Coin from "./icons/Coin.astro";
import Response from "./icons/Response.astro";
---

<section>
    <div class="box_info_heading" >
        <h3>Â¡Pasacalles en el acto!</h3>
        <div class="box_phone_number" >
            <WhatsappButton size="large" />
            <p class="phone_number" >
                15 7364-1513
            </p>
        </div>
    </div> 
    <div class="container_phone_number" >
        <div>
            <p><Award/> CALIDAD</p>
